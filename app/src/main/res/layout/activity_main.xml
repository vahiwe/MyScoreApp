<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#e4e9ff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/team_a_score"
            android:paddingLeft="40dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:text="0"
            android:textSize="56sp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#839bfe"
            android:textColor="#ffffff"
            android:textAllCaps="true"
            android:text="reset"
            android:textSize="18sp"
            android:onClick="reset"/>

        <TextView
            android:id="@+id/team_b_score"
            android:layout_width="0dp"
            android:paddingRight="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:text="3"
            android:textSize="56sp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:background="#839bfe"
            android:textColor="#ffffff"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:text="+"
            android:onClick="scoreda"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_marginRight="50dp"
            android:gravity="center_horizontal"
            android:text="GOALS"
            android:textSize="24sp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center_horizontal"
            android:text="GOALS"
            android:textSize="24sp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#839bfe"
            android:textColor="#ffffff"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:text="+"
            android:onClick="scoredb"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="5dp"
                    android:background="#839bfe"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="15dp"
                    android:text="+"
                    android:onClick="shotsForA"/>
                <TextView
                    android:id="@+id/shota"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:gravity="center_horizontal"
                    android:text="2"
                    android:textSize="24sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#839bfe"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:text="+"
                    android:onClick="possOfA"/>
                <TextView
                    android:id="@+id/possa"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:gravity="center_horizontal"
                    android:text="53"
                    android:textSize="24sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#839bfe"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:text="+"
                    android:onClick="cornOfA"/>
                <TextView
                    android:id="@+id/corna"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:gravity="center_horizontal"
                    android:text="1"
                    android:textSize="24sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#839bfe"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="15dp"
                    android:text="+"
                    android:onClick="cardOfA"/>
                <TextView
                    android:id="@+id/carda"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:gravity="center_horizontal"
                    android:text="3"
                    android:textSize="24sp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textAllCaps="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="23dp"
                android:textSize="20sp"
                android:text="shots"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textAllCaps="true"
                android:layout_marginBottom="25dp"
                android:textSize="20sp"
                android:text="possession"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textAllCaps="true"
                android:layout_marginBottom="30dp"
                android:textSize="20sp"
                android:text="corners"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textAllCaps="true"
                android:textSize="19sp"
                android:text="yellow card"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shotb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:gravity="center_horizontal"
                    android:text="4"
                    android:textSize="24sp"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="5dp"
                    android:background="#839bfe"
                    android:textColor="#ffffff"
                    android:layout_marginRight="15dp"
                    android:text="+"
                    android:onClick="shotsForB"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/possb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:gravity="center_horizontal"
                    android:text="47"
                    android:textSize="24sp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="5dp"
                    android:background="#839bfe"
                    android:textColor="#ffffff"
                    android:layout_marginRight="15dp"
                    android:text="+"
                    android:onClick="possOfB"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cornb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:gravity="center_horizontal"
                    android:text="6"
                    android:textSize="24sp"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="5dp"
                    android:background="#839bfe"
                    android:textColor="#ffffff"
                    android:layout_marginRight="15dp"
                    android:text="+"
                    android:onClick="cornOfB"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cardb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:gravity="center_horizontal"
                    android:text="2"
                    android:textSize="24sp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#839bfe"
                    android:textColor="#ffffff"
                    android:layout_marginRight="15dp"
                    android:text="+"
                    android:onClick="cardOfB"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

